<h1>{{title}}</h1>

{{# each users}}
    <form  class="form" action="users/{{this.id}}?_method=PUT" method="post">
        <div class="form-group">
        <label for="name">ФИО</label>
        <input type="text" value="{{ this.user_fio }}"  name="user_fio" class="form-control" id="user_fio" placeholder="Введите ФИО">
    </div>
    <div class="form-group">
        <label for="name">Логин</label>
        <input type="text"  value="{{ this.login }}" name="login" class="form-control" id="login" placeholder="Введите логин">
    </div>
    <div class="form-group">
        <label for="name">Пароль</label>
        <input type="text" value="{{ this.password }}" name="password" class="form-control" id="password" placeholder="Введите пароль">
    </div>
    <div class="form-group">
        <label for="name">Email</label>
        <input type="text" value="{{ this.email }}" name="email" class="form-control" id="email" placeholder="Введите email">
    </div>
    <div class="form-group">
        <label for="name">Год</label>
        <input type="text" value="{{ this.year_name }}" name="year_name" class="form-control" id="year_name" placeholder="Введите год">
    </div>
    <div class="form-group">
        <label for="name">Роль</label>
        <input type="text" value="{{ this.role_name }}"  name="role_name" class="form-control" id="role_name" placeholder="Введите роль">
    </div>

    {{/each}}
    <a class="btn btn-danger btn-sm" href="/years">Назад</a>
    <button type="submit" class="btn btn-primary btn-sm">Добавить</button>
</form>