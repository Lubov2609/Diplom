<link rel='stylesheet' href='/stylesheets/form.css'/>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">


<div class="main-block">
    <div class="left-part">
        <i class="fas fa-envelope"></i>
        <i class="fas fa-at"></i>
        <i class="fas fa-mail-bulk"></i>
    </div>
    <form  class="form" action="/students" method="post">
        <h1>{{title}}</h1>
        <div class="info">
            <label for="name">ФИО</label>
            <input type="text"  name="student_fio" class="form-control" id="student_fio" placeholder="Введите ФИО">
        </div>
        <div class="info">
            <label for="name">Группа</label>
            <select name="group_id">
                {{#each groups}}
                    <option value="{{this.id}}">{{this.group_name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="info">
            <label for="name">Средняя оценка за обучение</label>
            <input type="text"  name="student_gpa" class="form-control" id="student_gpa" placeholder="Введите ср.оценку">
        </div>
        <div class="info">
            <label for="name">Оценка отзыва</label>
            <input type="text"  name="student_otz" class="form-control" id="student_otz" placeholder="Введите оценку руководителя">
        </div>

        <button type="submit" >Добавить</button>
        <a  href="/students"><p>Назад</p></a>
    </form>

</div>